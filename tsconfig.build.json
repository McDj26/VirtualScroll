{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/**/*",
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,

    "baseUrl": ".",
    "paths": {
      "@pkg/*": ["packages/*"]
    },

    "allowImportingTsExtensions": true,
    "allowJs": true,
    "noImplicitAny": false
  }
}
